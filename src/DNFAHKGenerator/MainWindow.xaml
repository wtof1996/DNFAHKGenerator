        </DataGrid>
        <Button x:Name="ButtonFire" Content="Fire!" HorizontalAlignment="Left" Margin="587,201,0,0" VerticalAlignment="Top" Width="118" Height="86"/>
        <ComboBox x:Name="ComboBoxPreset" HorizontalAlignment="Left" Margin="574,77,0,0" VerticalAlignment="Top" Width="174">
            <ComboBoxItem Content="方案一" IsSelected="True"/>
        </ComboBox>

    </Grid>
</Window>
